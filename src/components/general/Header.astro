<header id="header" class="header">
  <div class="header__container wrapper">
    <div class="header__logo">
      {title}
    </div>
    <nav class="header__nav">
      <ul class="header__list">
        <li class="header__item">
          <a href="#about-me" class="link-middle" data-scroll>About</a>
        </li>
        <li class="header__item">
          <a href="#experience" class="link-middle" data-scroll>Experience</a>
        </li>
        <li class="header__item">
          <a href="/" class="link-middle">Projects</a>
        </li>
        <li class="header__item">
          <a href="#footer" class="link-middle" data-scroll>Contact</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style lang="scss" is:global>
  .header {
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 123;
    padding: 5rem 0;
    transition: all 0.5s ease;
    background: var(--white);
    &.up,
    &.down {
      box-shadow: -2px 3px 9px 0px rgba(0, 0, 0, 0.36);
      padding: 2rem 0;
      transition: all 0.5s ease;
    }

    &__container {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 2rem;
    }
    &__logo {
      font-size: 3rem;
    }

    &__list {
      display: flex;
      gap: 2rem;
      list-style: none;
      margin: 0;
      padding: 0;
    }
    &__item {
      font-size: 1.5rem;
      a {
        font-size: 2.8rem;
        text-decoration: none;
        color: var(--black);
      }
    }
  }
</style>
